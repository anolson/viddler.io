<div class="row page-header">
  <h1>Videos</h1>
</div>
<div class="row">
  <% if @videos.empty? %>
    <div class="span6 offset3">
      <div class="well text-center">Dang, looks there aren't any videos here.</div>
    </div>
  <% else %>
    <ul class="thumbnails">
      <%= render :partial => 'video', :collection => @videos %>
    </ul>
  <% end %>
</div>

<%= render :partial => 'pager' %>
